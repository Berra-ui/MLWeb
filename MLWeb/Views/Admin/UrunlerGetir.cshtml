@using MLWeb.Models
@model ProductsViewModel

@{
    ViewBag.Title = "UrunlerGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("UrunGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new
{
    @class = "form-control",
 @readonly = "readonly"

})
    <br />
    @Html.LabelFor(x => x.Lang)
    @Html.DropDownListFor(x => x.Lang,(List<SelectListItem>)ViewBag.langlist, new
{
@class = "form-control"
    })
    <br />
    @Html.LabelFor(x => x.Caption)
    @Html.TextBoxFor(x => x.Caption, new
{
@class = "form-control"
    })
    <br />
    @Html.LabelFor(x => x.explanation)
    @Html.TextAreaFor(x => x.explanation, new
{
    @id = "editor1"
})
    <br />
    <input type="file" name="Urunimg" />
    <input type="file" name="Tablo" />
    <input type="submit" value="Kaydet" />
    <script type="text/javascript">
    var editor = CKEDITOR.instances['editor1'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor1', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
    </script>
}

