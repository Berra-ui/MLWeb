@using MLWeb.Models
@model HomeSViewModel
@{
    ViewBag.Title = "SlideGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="~/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("SlideGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new
{
    @class = "form-control",
 @readonly = "readonly"

})

    @Html.LabelFor(x => x.Lang)
    @Html.DropDownListFor(x => x.Lang, (List<SelectListItem>)ViewBag.langlist, new
{
@class = "form-control"
    })
    <br />

    @Html.LabelFor(x => x.Text)
    @Html.TextAreaFor(x => x.Text, new
{
    @id = "editor1"
})
    <br />


    <input type="file" name="img" />
    <input type="submit" value="Kaydet" />
    <script type="text/javascript">
    var editor = CKEDITOR.instances['editor1'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor1', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
    </script>

}
