@using MLWeb.Models
@model HomeSViewModel
@{
    ViewBag.Title = "SlideEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="~/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("SlideEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(x => x.Lang)
    @Html.DropDownList("lang", new SelectList(ViewBag.lang, "Value", "Text"), "Kategori Seçiniz", new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Text)
    @Html.TextBoxFor(x => x.Text, new
{
    @id = "editor1"
})
    <br />



    <input type="file" name="img" />



    <input type="submit" value="Kaydet" />
    <script type="text/javascript">
    var editor = CKEDITOR.instances['editor1'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor1', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
    </script>
}
