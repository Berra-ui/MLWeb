@using MLWeb.Models
@model ProductsViewModel
    @*@model MLWeb.Models.Language*@
@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>


<form class="form-group" method="post">

    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new
{
    @class = "form-control",
 @readonly = "readonly"

})
    <br />
    @Html.LabelFor(x => x.Lang)
    @Html.DropDownListFor(x=>x.dil, (List<SelectListItem>)ViewBag.lang, new
{
@class = "form-control"
    })
    })
    <br />
    @Html.LabelFor(x => x.Caption)
    @Html.TextBoxFor(x => x.Caption, new
{
@class = "form-control"
    })
    <br />
    @Html.LabelFor(x => x.explanation)
    @Html.TextAreaFor(x => x.explanation, new
{
    @id = "editor1"
})
    <br />

    <input type="submit" class="btn btn-danger"value="Kaydet" />



    <script type="text/javascript">
    var editor = CKEDITOR.instances['editor1'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor1', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
    </script>

</form>
